.panel.panel-default
  .panel-body
    - if @items.empty?
      %p.bills You have no bills or paychecks.
    - else
      .bills
        - @items.group_by { |b| b.next_pay_date.month }.each do |month, items|
          .row.header
            .col-md-12
              - if month == DateTime.now.month
                %h4 This month
              - else
                %h4= Date::MONTHNAMES[month]
          - items.each do |item|
            %div{ class: "row #{item.is_a?(Bill) ? 'bill' : 'paycheck'}" }
              .col-md-12
                = form_for item, as: :payment, url: pay_payment_path(item), method: :post do |f|
                  .btn-group.hidden-xs.bill
                    - if item.url.present?
                      = link_to item.url, class: 'btn btn-default', target: '_blank' do
                        %span.glyphicon.glyphicon-new-window
                    = link_to payment_path(item), method: :delete, class: 'btn btn-default', data: { confirm: 'Are you sure?' } do
                      %span.glyphicon.glyphicon-trash
                    - if item.is_a? Bill
                      %button.btn.btn-default.pay{ type: 'submit' }
                        %span.glyphicon.glyphicon-ok.text-primary
                    - else
                      %button.btn.btn-default.pay{ type: 'submit' }
                        %span.glyphicon.glyphicon-usd.text-success

                  .name
                    %strong= item.name
                  .due= item.next_pay_date.strftime('%B %-d')
                  .days-left= item.friendly_days_left

                  .row.visible-xs.bill
                    - if item.url.present?
                      .col-xs-4
                        = link_to item.url, class: 'btn btn-default btn-block', target: '_blank' do
                          %span.glyphicon.glyphicon-new-window
                    %div{ class: "#{ (item.is_a?(Paycheck) || item.url.blank?) ? 'col-xs-6' : 'col-xs-4' }" }
                      = link_to payment_path(item), method: :delete, class: 'btn btn-default btn-block', data: { confirm: 'Are you sure?' } do
                        %span.glyphicon.glyphicon-trash
                    - if item.is_a? Bill
                      %div{ class: "#{ item.url.present? ? 'col-xs-4' : 'col-xs-6' }" }
                        %button.btn.btn-default.btn-block.pay{ type: 'submit' }
                          %span.glyphicon.glyphicon-ok.text-primary
                    - else
                      .col-xs-6
                        %button.btn.btn-default.btn-block.pay{ type: 'submit' }
                          %span.glyphicon.glyphicon-usd.text-success
