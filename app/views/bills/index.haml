.panel.panel-default
  .panel-body
    - if @bills.empty?
      %p.bills You have no bills.
    - else
      .bills
        - @bills.group_by { |b| b.due_date.month }.each do |month, bills|
          .row
            .col-md-12
              - if month == DateTime.now.month
                %h4 This month
              - else
                %h4= Date::MONTHNAMES[month]
          - bills.each do |bill|
            .row
              .col-md-12
                = form_for bill, url: pay_bill_path(bill), method: :post do |f|
                  .btn-group.hidden-xs.bill
                    = link_to bill, method: :delete, class: 'btn btn-default', data: { confirm: 'Are you sure?' } do
                      %span.glyphicon.glyphicon-trash
                    = link_to bill.pay_url, class: 'btn btn-default', target: '_blank', disabled: bill.pay_url.blank? do
                      %span.glyphicon.glyphicon-new-window
                    = f.submit 'Pay', class: 'btn btn-primary pay'

                  .name
                    %strong= bill.name
                  .due= bill.due_date.strftime('%B %-d')
                  .days-left= bill.days_left

                  .row.visible-xs.bill
                    .col-xs-4
                      = link_to bill, method: :delete, class: 'btn btn-default btn-block', data: { confirm: 'Are you sure?' } do
                        %span.glyphicon.glyphicon-trash
                    .col-xs-4
                      = link_to bill.pay_url, class: 'btn btn-default btn-block', target: '_blank', disabled: bill.pay_url.blank? do
                        %span.glyphicon.glyphicon-new-window
                    .col-xs-4
                      = f.submit 'Pay', class: 'btn btn-primary pay btn-block'
