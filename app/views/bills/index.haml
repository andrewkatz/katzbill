.panel.panel-default
  .panel-body
    - if @bills.empty?
      %p.bills You have no bills.
    - else
      .bills
        - @bills.group_by { |b| b.due_date.month }.each do |month, bills|
          .row
            .col-md-12
              - if month == DateTime.now.month
                %h4 This month
              - else
                %h4= Date::MONTHNAMES[month]
          - bills.each do |bill|
            .row
              .col-md-12
                = form_for bill, url: pay_bill_path(bill), method: :post do |f|
                  .btn-group.hidden-xs.bill
                    = link_to 'Delete', bill, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' }
                    - if bill.pay_url
                      = link_to 'Open', bill.pay_url, class: 'btn btn-info', target: '_blank'
                    = f.submit 'Pay', class: 'btn btn-primary pay'

                  .name
                    %strong= bill.name
                  .due= bill.due_date.strftime('%B %-d')
                  .days-left= bill.days_left

                  .btn-group.visible-xs.bill
                    = link_to 'Delete', bill, method: :delete, class: 'btn btn-danger btn-block', confirm: 'Are you sure?'
                    - if bill.pay_url
                      = link_to 'Open', bill.pay_url, class: 'btn btn-info btn-block', target: '_blank'
                    = f.submit 'Pay', class: 'btn btn-primary pay btn-block'
